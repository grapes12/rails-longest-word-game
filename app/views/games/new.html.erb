<div class="container">
<h1>The Longest Word!</h1>
<ul class='list'>
  <% @random_letters.each do | letter |%>
<li> <%= letter %></li>
  <% end %>
</ul>
<form action="<%= score_path %>" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <p>What is the longest word you can find?</p>
  <input id='word' type="text" name="word" placeholder="Enter word here">
  <input id="letters" name="letters" type="hidden" value="<%= @random_letters %>" />
  <input id="score" name="score" type="hidden" value="<%= @score %>" />
  <input id='submit' type="submit" value='Play'>
</form>
<p class='score-text'>Current Score: <%= @score %></p>
</div>
